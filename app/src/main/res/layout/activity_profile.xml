<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_after"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saurabh.munshi.notify"
    android:background="#fcfcfc">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_1"
                    android:clickable="true"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_default" />

            </RelativeLayout>

            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:paddingLeft="50dp"
                android:textColor="@color/colorSecondary"
                android:paddingRight="50dp"
                android:text="Advertising/Branding"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Gary Vaynerchuck"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:drawableTint="@color/colorTextOnS"
                android:text="Armonk, New York"
                android:textColor="@color/colorTextOnS"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/following_circle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle" />

                    <TextView
                        android:id="@+id/following_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:layout_alignTop="@+id/following_circle"
                        android:layout_alignBottom="@+id/following_circle"
                        android:layout_alignLeft="@+id/following_circle"
                        android:layout_alignRight="@+id/following_circle"
                        android:text="76"
                        android:textColor="#000000" />
                    <Button
                        android:id="@+id/following"
                        android:layout_below="@id/following_circle"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="Following"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                </RelativeLayout>

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/layout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/follower_circle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle" />

                    <TextView
                        android:id="@+id/follower_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:layout_alignTop="@id/follower_circle"
                        android:layout_alignBottom="@id/follower_circle"
                        android:layout_alignLeft="@id/follower_circle"
                        android:layout_alignRight="@id/follower_circle"
                        android:text="5.2k"
                        android:textColor="#000000" />
                    <Button
                        android:id="@+id/follower"
                        android:layout_below="@id/follower_circle"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="Followers"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/rating_circle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/myImageViewText"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:drawableTint="@color/colorTextOnS"
                        android:text="4.5"
                        android:layout_margin="1dp"
                        android:layout_alignTop="@+id/rating_circle"
                        android:layout_alignBottom="@+id/rating_circle"
                        android:layout_alignLeft="@+id/rating_circle"
                        android:layout_alignRight="@+id/rating_circle"
                        android:textColor="#000000" />
                    <Button
                        android:id="@+id/rating"
                        android:layout_below="@+id/rating_circle"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="Rating"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#fcfcfc"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="160dp"
                        android:layout_height="190dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/circle_ground"
                                android:src="@drawable/ic_add_location_black_24dp"
                                android:padding="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Report"
                                android:textSize="20dp"
                                />
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="10dp"
                                android:layout_margin="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Prescriptions"
                                android:padding="5dp"
                                />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="160dp"
                        android:layout_height="190dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/circle_ground"
                                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Health Record"
                                android:textSize="20dp"
                                />
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="10dp"
                                android:layout_margin="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="File Handling"
                                android:padding="5dp"
                                />

                        </LinearLayout>



                    </android.support.v7.widget.CardView>
                </LinearLayout>
                //second



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <android.support.v7.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="160dp"
                        android:layout_height="190dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/circle_ground"
                                android:src="@drawable/ic_add_location_black_24dp"
                                android:padding="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Health"
                                android:textSize="20dp"
                                />
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="10dp"
                                android:layout_margin="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Check up"
                                android:padding="5dp"
                                />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="160dp"
                        android:layout_height="190dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/circle_ground"
                                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:text="Health Service"
                                android:textSize="20dp"
                                />
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="10dp"
                                android:layout_margin="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Check up"
                                android:padding="5dp"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_weight="7.93">

                                <android.support.design.widget.BottomNavigationView
                                    android:id="@+id/navigation2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"


                                    android:background="?android:attr/windowBackground"
                                    app:menu="@menu/navigation" />



                            </LinearLayout>



                        </LinearLayout>



                    </android.support.v7.widget.CardView>



                </LinearLayout>





            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_weight="7.93"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="450dp">


        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/navigation"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="33dp" />


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>